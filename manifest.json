{
    "manifest_version": 2,
    "name": "Select Search",
    "version": "1.1",
    "description": "select text to search on various search engines.",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "background_scripts/message.js"
        ]
    },
    "options_page": "pages/options.html",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content_scripts/listen.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}